POST https://qarag.onrender.com/api/auth/register
Content-Type: application/json

{
  "username": "testuser",
  "password": "password",
  "email": "test@example.com"
}

### 用户登录
# @name login
POST http://localhost:8080/api/auth/login
Content-Type: application/json

{
  "username": "admin",
  "password": "admin"
}

> {%
    client.global.set("auth_token", response.body.token);
    client.log("Token saved: " + response.body.token);
%}

### 创建会话 (需要先登录获取 JWT Token)
# @name createConversationRequest
POST http://localhost:8080/api/conversations
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "title": "pdf问答",
  "documentIds": ["714d3d8c-0f11-4580-a726-fb9dcab0948c"]
}

> {%
    client.global.set("conversation_id", response.body.id);
    client.log("Conversation ID saved: " + response.body.id);
%}

### 获取会话列表 (需要登录)
GET http://localhost:8080/api/conversations
Authorization: Bearer {{auth_token}}

### 发送消息到会话 (需要登录)
POST http://localhost:8080/api/conversations/{{conversation_id}}/chat
Content-Type: application/json
Authorization: Bearer {{auth_token}}

{
  "message": "阿里IaaS开始于哪一年"
}

### 获取会话消息历史 (需要登录)
GET http://localhost:8080/api/conversations/{{conversation_id}}/messages
Authorization: Bearer {{auth_token}}



### 上传文档 (需要登录，请修改文件路径)
# @name uploadDocument
POST http://localhost:8080/api/upload
Authorization: Bearer {{auth_token}}
Content-Type: multipart/form-data; boundary=boundary

--boundary
Content-Disposition: form-data; name="file"; filename="电商和港股软件行业2018下半年投资策略：电商趋势和云软件的兴起.pdf"

< C:\Users\li1001\Downloads\电商和港股软件行业2018下半年投资策略：电商趋势和云软件的兴起.pdf

--boundary--


> {%

    client.global.set("document_id", response.body.id);

    client.log("Document ID saved: " + response.body.id);

%}

### 获取文档列表 (需要登录)
GET http://localhost:8080/api/documents
Authorization: Bearer {{auth_token}}

### 删除文档 (需要登录，删除刚才上传的文档)
DELETE http://localhost:8080/api/documents/15b61b0c-f098-45c5-bb47-c226be56e4c9
Authorization: Bearer {{auth_token}}
